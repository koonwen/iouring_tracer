(library
 (name util)
 (libraries ocaml_libbpf definitions fxt eio_linux)
 (modules util))

(executable
 (name trace_rings)
 (libraries util definitions fxt)
 (modules trace_rings ring_writer))

(rule
 (mode
  (promote (until-clean)))
 (deps
  (source_tree %{project_root}/bpf_uring_events))
 (targets
  uring.bpf.o
  uring.h)
 (action
  (no-infer
   (progn
    (chdir
      %{project_root}/bpf_uring_events
     (run make))
    (copy %{project_root}/bpf_uring_events/output/uring.bpf.o uring.bpf.o)
    (copy# %{project_root}/bpf_uring_events/uring.h uring.h)))))

